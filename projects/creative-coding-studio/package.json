{
  "name": "@carstennichte/creative-coding-studio",
  "private": true,
  "version": "0.1.0",
  "main": "src/main.js",
  "scripts": {
    "start": "yarn run build:renderer && yarn run build:css && electron .",
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./src/renderer/tailwind.css -o ./src/renderer/styles.css",
    "watch:css": "tailwindcss -c tailwind.config.cjs -i ./src/renderer/tailwind.css -o ./src/renderer/styles.css --watch",
    "build:renderer": "esbuild src/renderer/index.tsx --bundle --outfile=src/renderer/bundle.js --platform=browser --format=esm --jsx=automatic --sourcemap"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron": "^28.2.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-resizable-panels": "^2.0.22",
    "reactflow": "^11.11.3",
    "tailwind-merge": "^2.5.3",
    "tailwindcss": "^3.4.14"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.23.0"
  }
}
